{
  "name": "@repo/orm",
  "type": "module",
  "scripts": {
    "build": "npm run clean && tsup && tsc-alias",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "clear:force": "rimraf *.js --force",
    "postinstall": "prisma generate",
    "db:generate": "prisma generate",
    "db:push": "prisma db push --skip-generate"
  },
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": "./src/index.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.0.1"
  },
  "devDependencies": {
    "prisma": "^6.0.1",
    "@repo/typescript-config": "*",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.10",
    "tsup": "^8.2.4",
    "typescript": "latest"
  }
}
